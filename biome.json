{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": ["public", "node_modules"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"all": true,
				"noUndeclaredDependencies": "off"
			}
		}
	},
	"javascript": {
		"globals": ["$", "_", "externalVariable"]
	}
}
