{
  "name": "remix-radioshare-app-d1",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "deploy": "wrangler pages deploy ./build/client",
    "dev": "remix vite:dev",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "wrangler pages dev ./build/client",
    "typecheck": "tsc",
    "typegen": "wrangler types",
    "drizzle:update": "drizzle-kit generate:sqlite --out ./app/drizzle/migrations --schema ./app/drizzle/schema.server.ts",
    "db:migrate:local": "npm run drizzle:update && npx wrangler d1 migrations apply db --local",
    "db:migrate:remote": "npm run drizzle:update && npx wrangler d1 migrations apply db --remote",
    "db:migrate": "npm run drizzle:update && npx wrangler d1 migrations apply db",
    "test": "vitest"
  },
  "dependencies": {
    "@conform-to/react": "^1.0.2",
    "@conform-to/zod": "^1.0.2",
    "@mantine/core": "^7.6.2",
    "@mantine/hooks": "^7.6.2",
    "@mantine/notifications": "^7.5.3",
    "@paralleldrive/cuid2": "^2.2.2",
    "@remix-run/cloudflare": "^2.8.1",
    "@remix-run/cloudflare-pages": "^2.8.1",
    "@remix-run/react": "^2.8.1",
    "@tabler/icons-react": "^2.47.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/uuid": "^9.0.8",
    "@types/youtube": "^0.0.50",
    "bcryptjs": "^2.4.3",
    "date-fns": "^3.3.1",
    "drizzle-orm": "^0.30.4",
    "isbot": "^4.1.0",
    "jotai": "^2.7.2",
    "miniflare": "^3.20231030.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-youtube": "^10.1.0",
    "remix": "^2.8.1",
    "remix-auth": "^3.6.0",
    "remix-auth-form": "^1.4.0",
    "tiny-invariant": "^1.3.3",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240320.1",
    "@faker-js/faker": "^8.4.1",
    "@remix-run/dev": "^2.8.1",
    "@testing-library/react": "^14.2.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "@vitest/coverage-v8": "^1.4.0",
    "better-sqlite3": "^9.4.3",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.38.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "happy-dom": "^14.2.0",
    "msw": "^2.2.9",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.37",
    "postcss-preset-mantine": "^1.13.0",
    "postcss-simple-vars": "^7.0.1",
    "typescript": "^5.1.6",
    "vite": "^5.2.2",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.4.0",
    "wrangler": "^3.24.0"
  },
  "engines": {
    "node": ">=20"
  }
}
